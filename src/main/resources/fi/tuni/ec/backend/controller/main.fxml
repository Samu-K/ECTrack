<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="1080" prefHeight="720" style="-fx-background-color: #2E2C3D;">

    <!-- Top Bar -->
    <top>
        <HBox prefHeight="80" style="-fx-background-color: #211F26;-fx-padding: 0 20 0 30">
            <!-- Image in the top left corner -->
            <ImageView fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true">
                <Image url="@logo_nobg.png" />
            </ImageView>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="150" spacing="20" style="-fx-background-color: #C0C0C0; -fx-padding: 20;">
            <Label text="Filters" style="-fx-font-size: 18px; -fx-text-fill: black;" alignment="TOP_CENTER" />
            <Label text="Region" style="-fx-text-fill: black;" />
            <ComboBox prefWidth="120" />
            <Label text="Country" style="-fx-text-fill: black;" />
            <ComboBox prefWidth="120" />
            <Button text="SAVE SEARCH" prefWidth="120" alignment="BOTTOM_CENTER"/>
            <Button text="LOAD SEARCH" prefWidth="120" alignment="BOTTOM_CENTER"/>
        </VBox>
    </left>

    <!-- Center Area -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #4D4A59; -fx-padding: 20;">
            <!-- Tabs -->
            <HBox spacing="10" style="-fx-background-color: #4D4A59;" alignment="TOP_CENTER">
                <Button text="Day" style="-fx-background-color: lightgrey; -fx-font-size: 18px;" />
                <Button text="Week" style="-fx-background-color: grey; -fx-font-size: 18px;" />
                <Button text="Month" style="-fx-background-color: grey; -fx-font-size: 18px;" />
                <Button text="Year" style="-fx-background-color: grey; -fx-font-size: 18px;" />
                <Button text="YTD" style="-fx-background-color: grey; -fx-font-size: 18px;" />
            </HBox>

            <!-- Date Display -->
            <HBox alignment="CENTER">
                <Label text="Wed. 18.09.2024" style="-fx-text-fill: white; -fx-font-size: 18;-fx-padding: 0 0 0 0;-fx-text-alignment: CENTER"/>
            </HBox>

            <!-- Graph Area (Placeholder) -->
            <StackPane style="-fx-background-color: #3E3B50;" prefHeight="500">
                <Label text="Graph Placeholder" style="-fx-text-fill: white; -fx-font-size: 24px;" />
            </StackPane>
        </VBox>
    </center>
</BorderPane>
